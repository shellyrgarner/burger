<div class="container">

    <div class="row">
        <div class="center col-sm-12 mb-3">
            <img src="assets/img/sprouts-burg.jpg" class="rounded mx-auto d-block mb-4" alt="Eat-Da-Burger">
            {{!-- <p class="text-lg-center">Eat-Da-Burger!</p> --}}
            <h2>Eat-Da-Burger</h2> 
        </div>
    </div>


    <div class="row">
        <div class="col-sm-6">

            <br>
            <h3>Burgers Ya Wanna Eat!</h3>

            {{!-- <ul> --}}
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}} {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="POST">
                        <input type="hidden" name="devoured" value="true">
                        <button class="btn-primary" type="submit">Devour It!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            {{!-- </ul> --}}

        </div>

        <div class="col-sm-6">
            <br>
            <h3>Burgers That Have Been Eaten!</h3>

            {{#each burgers}} {{#if this.devoured}}
            <li>
                {{this.id}} {{this.burger_name}}
            </li>
            {{/if}} {{/each}}

        </div>
    </div>

    <div class="row">
        <div class="center col-sm-12 mt-3">

            <h4>Add Ya Burger!</h4>
            <form class="create-update-form" action="/" method="POST">

                <div class="form-group">
                    <p>Enter a burger you want to eat. Then click the "Add Burger" button.</p>
                    <input type="text" id="addBurger" name="burger_name">
                </div>

                <button class="btn-primary" type="submit">Add Burger</button>
            </form>
        </div>
    </div>




</div>